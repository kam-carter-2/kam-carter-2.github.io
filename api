  <main>
    <div id="quote-box">
      <div id="quote">Loading quote...</div>
      <div id="author"></div>
      <button id="new-quote">New Quote</button>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 Inspiration Hub. All rights reserved.</p>
  </footer>

  <script>
    async function fetchQuote() {
      try {
        const response = await fetch('https://api.quotable.io/random');
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        const data = await response.json();
        document.getElementById('quote').textContent = `"${data.content}"`;
        document.getElementById('author').textContent = `â€” ${data.author}`;
      } catch (error) {
        document.getElementById('quote').textContent = "Oops! Couldn't fetch a quote right now.";
        document.getElementById('author').textContent = '';
        console.error('Fetch error:', error);
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      fetchQuote();
      document.getElementById('new-quote').addEventListener('click', fetchQuote);
    });
  </script>
</body>
